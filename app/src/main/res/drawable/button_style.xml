<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="50dp" />
            <!--元件的漸層-->
            <solid android:color="#ffffff" />

            <!--邊框顏色、粗細-->
            <stroke
                android:width="1dp"
                android:color="#EDEDED" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>